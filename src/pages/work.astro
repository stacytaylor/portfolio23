---
import BaseLayout from '../layouts/BaseLayout.astro';
import CaseStudy from '../components/CaseStudy.astro';


const allPosts = await Astro.glob('../pages/work/*.md');

const pageTitle = "Work";
---

<BaseLayout pageTitle={pageTitle}>
        {allPosts.map((post) => <CaseStudy url={post.url} title={post.frontmatter.title} description={post.frontmatter.description} image={post.frontmatter.image} />)}

        </BaseLayout>